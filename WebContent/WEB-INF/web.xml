<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0"
  metadata-complete="true">
 
 	<!-- 设置session过期时间，默认为30分钟.设置为0代表永远不过期 -->
	<session-config>
      <session-timeout>300</session-timeout>
	</session-config>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <display-name>Welcome to Tomcat</display-name>
  <description>
     Welcome to Tomcat
  </description>
  
  <servlet>
     <servlet-name>userController</servlet-name>
     <servlet-class>com.ssf.web.UserController</servlet-class>
  </servlet>
  
  <servlet-mapping>
     <servlet-name>userController</servlet-name>
     <url-pattern>/user</url-pattern>
  </servlet-mapping>
  
  <!--  -->
  <servlet>
     <servlet-name>indexController</servlet-name>
     <servlet-class>com.ssf.web.IndexController</servlet-class>
  </servlet>
  
  <servlet-mapping>
     <servlet-name>indexController</servlet-name>
     <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <!-- 商品 -->
  <servlet>
     <servlet-name>productController</servlet-name>
     <servlet-class>com.ssf.web.ProductController</servlet-class>
  </servlet>
  
  <servlet-mapping>
     <servlet-name>productController</servlet-name>
     <url-pattern>/product</url-pattern>
  </servlet-mapping>
   <!-- 购物车 -->
  <servlet>
     <servlet-name>cartController</servlet-name>
     <servlet-class>com.ssf.web.CartController</servlet-class>
  </servlet>
  
  <servlet-mapping>
     <servlet-name>cartController</servlet-name>
     <url-pattern>/cart</url-pattern>
  </servlet-mapping>
  <!-- 订单 -->
    <servlet>
     <servlet-name>orderController</servlet-name>
     <servlet-class>com.ssf.web.OrderController</servlet-class>
  </servlet>
  
  <servlet-mapping>
     <servlet-name>orderController</servlet-name>
     <url-pattern>/order</url-pattern>
  </servlet-mapping>
  
  
  <!-- 编码过滤器 -->
  <filter>
      <filter-name>encodingFilter</filter-name>
      <filter-class>filter.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
  		<filter-name>encodingFilter</filter-name>
  		<url-pattern>/*</url-pattern>
  </filter-mapping>
  <!-- 检测登录过滤器 -->
    <filter>
      <filter-name>checkFilter</filter-name>
      <filter-class>filter.CheckFilter</filter-class>
  </filter>
  <filter-mapping>
  		<filter-name>checkFilter</filter-name>
  		<url-pattern>/cart/*</url-pattern>
  </filter-mapping>
  
  <filter-mapping>
  		<filter-name>checkFilter</filter-name>
  		<url-pattern>/order/*</url-pattern>
  </filter-mapping>
</web-app>
